<script>
        function footerProductClick(name, slug, price, position, category) {
      console.log(name, slug, price, position);
        dataLayer.push({
            'event': 'productClick',
            'ecommerce': {
                'click': {
                    'actionField': {'list': 'footer'},     
                    'products': [{
                        'name': name,                  
                        'id': slug,
                        'price': price,
                        'category': category,
                        'position': position
                    }]
                }
            }
        });
    }
</script>
    



    
    
    

