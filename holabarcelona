<script type="application/javascript">
  $(document).ready(function() {
    console.log('ready promotion');
  });

  function hidePromo() {
    var req = new XMLHttpRequest();
    req.open('GET', '/api/hide-promo');
    req.send();

}

</script>
    <script type="application/javascript">
  $(document).ready(function() {
    console.log('ready menu');
  });

  function showProductDetail(id) {
    $('.detail').hide();
    $('.detail-'+id).show();
  }
  function generalAvisHeight(){
		return (parseInt($('.general_avis_section').height()) + parseInt($('.general_avis_section').css('padding-top')) + parseInt($('.general_avis_section').css('padding-bottom')) );
	}

  $('.tickets').mouseenter(function() {
      $(this).addClass('show');
      $('.megamenu').addClass('mega-visible');
      let promoh = 0;
      if($('.promo-container').length && !isNaN($('.promo-container').height())) {
        promoh = $('.promo-container').height()
      }
      let avish = 0
      if ($('.general_avis_section').length && $('.general_avis_section').css('display') != 'none') {
        avish = generalAvisHeight();
      }
      let top = $('.head-container').height() + promoh + avish;
      if($('.head-container').hasClass('fixed')) {
        top = top - promoh - avish;
      }


      $('.megamenu').css('top',top+'px');
  });

  $('.select-lang').mouseenter(function() {
      $('.tickets').removeClass('show');
      $('.megamenu').removeClass('mega-visible');
  });

  $(window).bind('scroll', function () {
      let promoh = 0;
      if(!isNaN($('.promo-container').height())) {
        /* Si hay promo no fijamos el menú hasta que el scroll deje atrás dicho elemento */
        promoh = $('.promo-container').height()
      }
      if ($(window).scrollTop() > promoh) {
          /* Primero añadimos la clase fixed, para que los elementos obtengan las propiedades CSS correspondientes */
          $('.head-container').addClass('fixed');
          /* Una vez el menu tenga los estilos pertinentes realizamos los cálculos */
          let top = $('.head-container').height();
          $('.megamenu').css('top',top+'px');
      } else {
          $('.head-container').removeClass('fixed');
          /* En cuanto eliminamos la clase fixed recolculamos la altura de los dropdown. */
          let top = $('.head-container').height() + $('.promo-container').height();
          $('.megamenu').css('top',top+'px');
      }
  });

</script>    



