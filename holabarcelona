<script>
var itemsPerSlide = 3;
var totalItems = $('#carousel-example-related .carousel-item').length;

if(totalItems <= itemsPerSlide){
  $('#carousel-example-related .carousel-control-prev').attr('href','javascript:void(0)');
  $('#carousel-example-related .carousel-control-next').attr('href','javascript:void(0)');
  $('#carousel-example-related').carousel({
      pause: true,
      interval: false
  });
}
$('#carousel-example-related').on('slide.bs.carousel', function (e) {

    var $e = $(e.relatedTarget);
    var idx = $e.index();
    var itemsPerSlide = 3;
    var totalItems = $('#carousel-example-related .carousel-item').length;
    if (idx >= totalItems-(itemsPerSlide-1)) {
        var it = itemsPerSlide - (totalItems - idx);
        for (var i=0; i<it; i++) {
            // append slides to end
            if (e.direction=="left") {
                $('#carousel-example-related .carousel-item').eq(i).appendTo('.carousel-inner');
            }
            else {
                $('#carousel-example-related .carousel-item').eq(0).appendTo('.carousel-inner');
            }
        }
    }
});

function hideAvis(code) {
    $('#avis-'+code).fadeOut();
    var req = new XMLHttpRequest();
    req.open('GET', '/api/hide-avis/'+code);
    req.send();
}

</script>            

                                
                    

